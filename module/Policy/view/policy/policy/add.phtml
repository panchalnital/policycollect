</div>

<div class="form-group">
    <?= $this->formLabel($start_date) ?>
    <?= $this->formElement($start_date) ?>
    <?= $this->formElementErrors()->render($start_date, ['class' => 'help-block']) ?>
</div>

<div class="form-group">
    <?= $this->formLabel($end_date) ?>
    <?= $this->formElement($end_date) ?>
